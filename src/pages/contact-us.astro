---
import TitleSubtitle from "@main/components/shared/TitleSubtitle.astro";
import Layout from "@main/layouts/Layout.astro";
---

<Layout title="contact us | 1000$">
  <main class="" transition:animate="slide">
    <section class="mb-32">
      <div
        class="relative h-[500px] overflow-hidden bg-cover bg-[50%] bg-no-repeat bg-[url('/images/1.jpg')]"
      >
      </div>
      <div class="px-6 md:px-20 lg:px-40">
        <div
          class="block rounded-lg bg-[hsla(0,0%,100%,0.7)] px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] md:py-16 md:px-12 -mt-[15rem] backdrop-blur-[30px]"
        >
          <TitleSubtitle title="Get Started With 1000$" />
          <div class="mx-auto max-w-[800px] mt-4">
            <form>
              <div class="md:flex items-center justify-between gap-6 flex-wrap">
                <div class="mb-5 flex-[0.5]">
                  <label class="text-gray-700 font-semibold mb-2" for="name">Name</label>
                  <input
                    class="bg-white border rounded-lg shadow border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 py-2 px-4 block w-full appearance-none leading-normal"
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Full Name"
                    required
                  />
                </div>
                <div class="mb-5 flex-[0.5]">
                  <label class="text-gray-700 font-semibold mb-2" for="email">Email address</label>
                  <input
                    class="bg-white border rounded-lg shadow border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 py-2 px-4 block w-full appearance-none leading-normal"
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Email address"
                    required
                  />
                </div>
              </div>

              <div class="md:flex items-center justify-between gap-6">
                <div class="mb-5 flex-[0.5]">
                  <label class="text-gray-700 font-semibold mb-2" for="country">Country</label>
                  <input
                    class="bg-white border rounded-lg shadow border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 py-2 px-4 block w-full appearance-none leading-normal"
                    type="text"
                    id="country"
                    name="country"
                    placeholder="America"
                    required
                  />
                </div>
                <div class="mb-5 flex-[0.5]">
                  <label class="text-gray-700 font-semibold mb-2" for="budget">Budget</label>
                  <input
                    class="bg-white border rounded-lg shadow border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 py-2 px-4 block w-full appearance-none leading-normal"
                    type="number"
                    id="budget"
                    name="budget"
                    placeholder="10000"
                    required
                  />
                </div>
              </div>
              <div class="mb-5">
                <label class="text-gray-700 font-semibold mb-2" for="message">Other details?</label>
                <textarea
                  class="bg-white border rounded-lg shadow border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 py-2 px-4 block w-full appearance-none leading-normal"
                  id="message"
                  name="message"
                  rows="5"
                  required></textarea>
              </div>
              <button
                class="bg-gradient-to-r from-purple-400 to-indigo-500 text-white font-semibold py-2 rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out mb-5 w-full"
                type="submit">Build Your Software</button
              >
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
